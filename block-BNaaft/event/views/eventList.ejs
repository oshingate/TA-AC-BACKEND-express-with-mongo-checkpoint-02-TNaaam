<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;300;400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="flex jsb container">
        <strong>Event Management</strong>
        <div>
          <a href="/" class="btn btn-pri">Home</a>
          <a href="/events/new" class="btn btn-pri">Create new Event</a>
        </div>
      </div>
    </header>
    <div class="flex">
      <aside class="flex-25">
        <h4>Search by:-</h4>
        <div class="flex center-center">
          <a href="/events/" class="btn btn-sec">Reset</a>
        </div>
        <hr />
        <h5 class="tac">Categories</h5>
        <div class="allTags-div flex">
          <% arr.forEach(tag=>{ %>
          <a
            href="/events/sort/tags?name=<%= tag  %> "
            class="btn btn-ter flex-45"
            ><%= tag %>
          </a>
          <% }) %>
        </div>
        <hr />
        <h5 class="tac">Locations</h5>
        <div class="allTags-div flex">
          <% arrLocations.forEach(tag=>{ %>
          <a
            href="/events/sort/location?name=<%= tag  %> "
            class="btn btn-ter flex-45"
            ><%= tag %>
          </a>
          <% }) %>
        </div>
        <hr />
        <h5 class="tac">By Date</h5>
        <div class="allTags-div flex">
          <a href="/events/sort/date/acc" class="btn btn-ter flex-45"
            >Ascending
          </a>
          <a href="/events/sort/date/dec" class="btn btn-ter flex-45"
            >Descending
          </a>
        </div>
      </aside>
      <main class="flex-75">
        <section class="hero-sec sec-padding">
          <div class="container">
            <h1>List of Events</h1>
          </div>
        </section>
        <section class="sec-padding eventList-sec">
          <div class="containers eventList-div">
            <% if(events){ %> <% events.forEach(ele=>{ %>
            <div class="event-div flex jsb">
              <div>
                <h4><%= ele.title %></h4>
              </div>
              <div>
                <a href="/events/<%= ele._id %>" class="btn btn-pri">Details</a>
              </div>
            </div>
            <% }) %> <% } %> <% if(events.length===0){ %>
            <div class="text-center">
              <h3 class="mb-1">Currently no event found</h3>
              <h4 class="mb-1">Create new</h4>
              <a class="btn btn-pri mb-1" href="/events/new">Create Event</a>
            </div>
            <% } %>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
